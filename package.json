{
  "name": "nationwide-toll-hub",
  "version": "1.0.0",
  "description": "Unified toll management platform aggregating multiple state and regional agencies",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parth3690/nationwide-toll-hub.git"
  },
  "homepage": "https://github.com/parth3690/nationwide-toll-hub#readme",
  "bugs": {
    "url": "https://github.com/parth3690/nationwide-toll-hub/issues"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:load": "jest --testPathPattern=__tests__/load --detectOpenHandles --forceExit",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f infrastructure/k8s/",
    "k8s:delete": "kubectl delete -f infrastructure/k8s/",
    "db:migrate": "cd services/database && npm run migrate",
    "db:seed": "cd services/database && npm run seed",
    "db:reset": "cd services/database && npm run reset",
    "connectors:test": "cd packages/connectors && npm test",
    "connectors:build": "cd packages/connectors && npm run build",
    "event-processor:dev": "cd services/event-processor && npm run dev",
    "auth-service:dev": "cd services/auth && npm run dev",
    "setup": "npm install && npm run db:migrate && npm run db:seed",
    "start": "npm run docker:up",
    "stop": "npm run docker:down",
    "logs": "npm run docker:logs",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.8.1",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "services/**/*.ts",
      "packages/**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testTimeout": 30000,
    "detectOpenHandles": true,
    "forceExit": true
  }
}