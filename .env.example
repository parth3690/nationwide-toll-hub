# Nationwide Toll Hub - Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://toll_hub_user:toll_hub_password@localhost:5432/toll_hub
DB_HOST=localhost
DB_PORT=5432
DB_NAME=toll_hub
DB_USER=toll_hub_user
DB_PASSWORD=toll_hub_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Web App Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=Nationwide Toll Hub
NEXT_PUBLIC_APP_VERSION=1.0.0
